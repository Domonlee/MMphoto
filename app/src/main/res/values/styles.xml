<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/color_E6E6E6</item>
    </style>

    <style name="Text_Title" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/material_grey_800</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text_Title_Content" parent="Text_Title">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
